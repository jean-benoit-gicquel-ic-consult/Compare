{
	var _objectKey = ((IDbObjectRow) result).ObjectKey.ToString();
	float score;

	if (sResult.scoreDict.TryGetValue(_objectKey, out score)) {
			 scoreColumn.SetValue(result, score);
	}
}

</CodeLiteral>
